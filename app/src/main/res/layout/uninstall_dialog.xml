<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView android:id="@+id/uninstall_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/sym_def_app_icon"
        android:contentDescription="@string/uninstall_app_cd"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp">
    </ImageView>
    <TextView android:id="@+id/uninstall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/uninstall_image"
        android:text="@string/uninstall_body"
        android:textColor="@color/primary_text_default_material_dark"
        android:textSize="8pt">
    </TextView>
    <Button android:id="@+id/uninstall_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uninstall_confirm_text"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/uninstall_image"
        android:layout_alignParentStart="true">
    </Button>
    <Button android:id="@+id/uninstall_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uninstall_cancel_text"
        android:layout_alignTop="@+id/uninstall_confirm_button"
        android:layout_alignEnd="@+id/uninstall_text">
    </Button>
</RelativeLayout>
